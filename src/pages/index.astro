---
import BaseLayout from '../layouts/BaseLayout.astro';
import LiquidTransition from '../components/LiquidTransition.astro';
import BeerCard from '../components/BeerCard.astro';
import MistParticles from '../components/MistParticles.astro';
import PourAnimation from '../components/PourAnimation.astro';

const beers = [
  {
    name: "Dark Lodge IPA",
    type: "India Pale Ale",
    abv: 6.8,
    ibu: 65,
    description: "A mysterious blend of citrus and pine with a dark, smoky finish that lingers like secrets in the night.",
    color: "#D2691E",
    available: true
  },
  {
    name: "Midnight Porter",
    type: "Robust Porter",
    abv: 5.4,
    ibu: 35,
    description: "Rich chocolate and coffee notes with a velvety smooth texture. Perfect for contemplating life's mysteries.",
    color: "#2F1B14",
    available: true
  },
  {
    name: "Copper Log Lager",
    type: "Vienna Lager",
    abv: 4.8,
    ibu: 22,
    description: "Crisp and clean with a subtle malty sweetness and a hint of the forest floor after rain.",
    color: "#B87333",
    available: true
  },
  {
    name: "Red Room Ale",
    type: "American Red Ale",
    abv: 5.9,
    ibu: 40,
    description: "A bold red ale with caramel backbone and mysterious floral notes that dance on the palate.",
    color: "#A0522D",
    available: false
  },
  {
    name: "Twin Peaks Wheat",
    type: "Hefeweizen",
    abv: 4.2,
    ibu: 15,
    description: "Light and cloudy with notes of banana and clove, as enigmatic as morning mist on the mountains.",
    color: "#F4A460",
    available: true
  },
  {
    name: "Lodge Stout",
    type: "Imperial Stout",
    abv: 8.2,
    ibu: 55,
    description: "Deep, dark, and complex with notes of vanilla, oak, and whispers of ancient secrets.",
    color: "#1C1C1C",
    available: true
  }
];

const events = [
  {
    date: "July 15",
    title: "Mystery Beer Release",
    description: "Unveiling our latest creation - a beer shrouded in mystery"
  },
  {
    date: "July 22",
    title: "Trivia Night",
    description: "Test your knowledge of mysteries, both solved and unsolved"
  },
  {
    date: "July 29",
    title: "Live Jazz Evening",
    description: "Sultry sounds to accompany your evening libations"
  }
];
---

<BaseLayout title="Black Lodge Brews - Premium Craft Brewery" description="Enter the mysterious world of Black Lodge Brews, where every sip tells a story and every brew holds secrets waiting to be discovered.">
  <LiquidTransition direction="up" duration={0.8} color="#FFA000" />
  
  <!-- Hero Section -->
  <section class="hero section">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Welcome to Black Lodge Brews</h1>
        <p class="hero-subtitle">Where mysteries unfold in every glass</p>
        <div class="hero-buttons">
          <a href="#taps" class="btn">Explore Our Taps</a>
          <a href="#story" class="btn btn-outline">Our Story</a>
        </div>
      </div>
      <div class="hero-animation">
        <PourAnimation glassType="pint" beerColor="#FFA000" autoStart={true} duration={3} />
      </div>
    </div>
    <MistParticles particleCount={40} color="#F5E6D3" size={6} speed={2} opacity={0.4} />
  </section>

  <!-- Tap List Section -->
  <section id="taps" class="section taps-section">
    <div class="container">
      <h2 class="section-title">Our Mysterious Taps</h2>
      <p class="section-subtitle">Each brew tells a story, each sip reveals a secret</p>
      
      <div class="beers-grid">
        {beers.map((beer) => (
          <BeerCard {...beer} />
        ))}
      </div>
    </div>
  </section>

  <!-- Our Story Section -->
  <section id="story" class="section story-section">
    <div class="container">
      <div class="story-content">
        <div class="story-text">
          <h2>The Legend of Black Lodge</h2>
          <p>Deep in the heart of the Pacific Northwest, where ancient forests whisper secrets and mist dances through towering pines, lies the enigmatic Black Lodge Brewery. Founded in 2023 by a group of passionate brewers who believe that the best ales are born from mystery and crafted with intention.</p>
          
          <p>Our brewing process is as much art as it is science. We source our ingredients from local farms that have been tended by generations of families who understand the land's secrets. Each batch is carefully crafted in small quantities, ensuring that every glass carries the essence of our mysterious heritage.</p>
          
          <p>The lodge itself stands as a testament to craftsmanship and mystery. Built from reclaimed timber and stone, it houses our state-of-the-art brewing equipment alongside relics and curiosities collected from around the world. Every corner tells a story, every shadow holds a secret.</p>
        </div>
        <div class="story-visual">
          <div class="story-image">
            <div class="image-placeholder">
              <span>üèîÔ∏è</span>
              <p>The Lodge at Dawn</p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <MistParticles particleCount={25} color="#F5E6D3" size={4} speed={1.5} opacity={0.3} />
  </section>

  <!-- Taproom Section -->
  <section id="taproom" class="section taproom-section">
    <div class="container">
      <h2 class="section-title">The Taproom Experience</h2>
      <p class="section-subtitle">Step into a world where every detail matters</p>
      
      <div class="taproom-content">
        <div class="taproom-description">
          <h3>Immerse Yourself in Mystery</h3>
          <p>Our taproom is designed to transport you to another realm. Dark wood paneling, soft lighting, and carefully curated music create an atmosphere that's both intimate and mysterious. Whether you're here for a quiet contemplation or lively conversation, the Black Lodge provides the perfect backdrop.</p>
          
          <div class="taproom-features">
            <div class="feature">
              <h4>üç∫ Fresh Pours</h4>
              <p>All our beers are served at the perfect temperature from our custom tap system</p>
            </div>
            <div class="feature">
              <h4>üéµ Live Music</h4>
              <p>Regular performances featuring local jazz, folk, and ambient artists</p>
            </div>
            <div class="feature">
              <h4>ü•® Artisan Bites</h4>
              <p>Carefully selected food pairings that complement our unique brews</p>
            </div>
          </div>
        </div>
        
        <div class="events-calendar">
          <h3>Upcoming Events</h3>
          <div class="events-list">
            {events.map((event) => (
              <div class="event-item liquid-transition">
                <div class="event-date">{event.date}</div>
                <div class="event-details">
                  <h4>{event.title}</h4>
                  <p>{event.description}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="section contact-section">
    <div class="container">
      <h2 class="section-title">Find Your Way to the Lodge</h2>
      
      <div class="contact-content">
        <div class="contact-info">
          <div class="contact-item">
            <h3>üìç Location</h3>
            <p>123 Brewery Lane<br>Portland, OR 97210</p>
          </div>
          
          <div class="contact-item">
            <h3>üìû Phone</h3>
            <p>(503) 555-BREW</p>
          </div>
          
          <div class="contact-item">
            <h3>‚úâÔ∏è Email</h3>
            <p>hello@blacklodgebrews.com</p>
          </div>
          
          <div class="contact-item">
            <h3>üïí Hours</h3>
            <p>Monday - Thursday: 4pm - 10pm<br>
               Friday - Saturday: 2pm - 12am<br>
               Sunday: 2pm - 9pm</p>
          </div>
        </div>
        
        <div class="map-placeholder">
          <div class="map-content">
            <span>üó∫Ô∏è</span>
            <p>Interactive Map Coming Soon</p>
            <p>Located in the heart of Portland's historic district</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style lang="scss">
  @import '../styles/global.scss';

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, $roasted-malt 0%, $primary-brown 50%, $dark-forest 100%);
    position: relative;
    overflow: hidden;
    
    .hero-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: $spacing-xxl;
      align-items: center;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 $spacing-lg;
    }
    
    .hero-text {
      .hero-title {
        font-size: clamp(3rem, 6vw, 5rem);
        margin-bottom: $spacing-md;
        background: linear-gradient(45deg, $amber-gold, #FFD54F);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }
      
      .hero-subtitle {
        font-size: clamp(1.2rem, 2vw, 1.5rem);
        margin-bottom: $spacing-xl;
        color: rgba(245, 230, 211, 0.9);
        font-style: italic;
      }
      
      .hero-buttons {
        display: flex;
        gap: $spacing-md;
        flex-wrap: wrap;
      }
    }
    
    .hero-animation {
      display: flex;
      justify-content: center;
      align-items: center;
    }
  }

  .taps-section {
    background: linear-gradient(135deg, $primary-brown 0%, $roasted-malt 100%);
    
    .section-title {
      text-align: center;
      margin-bottom: $spacing-sm;
    }
    
    .section-subtitle {
      text-align: center;
      color: rgba(245, 230, 211, 0.8);
      margin-bottom: $spacing-xxl;
      font-style: italic;
    }
    
    .beers-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: $spacing-xl;
    }
  }

  .story-section {
    background: $dark-forest;
    position: relative;
    
    .story-content {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: $spacing-xxl;
      align-items: center;
    }
    
    .story-text {
      h2 {
        margin-bottom: $spacing-lg;
        color: $amber-gold;
      }
      
      p {
        margin-bottom: $spacing-md;
        line-height: 1.7;
        color: rgba(245, 230, 211, 0.9);
      }
    }
    
    .story-visual {
      .story-image {
        .image-placeholder {
          background: rgba(245, 230, 211, 0.1);
          border-radius: $border-radius-lg;
          padding: $spacing-xxl;
          text-align: center;
          border: 2px solid rgba(245, 230, 211, 0.2);
          
          span {
            font-size: 4rem;
            display: block;
            margin-bottom: $spacing-md;
          }
          
          p {
            color: $amber-gold;
            font-weight: 600;
          }
        }
      }
    }
  }

  .taproom-section {
    background: linear-gradient(135deg, $roasted-malt 0%, $primary-brown 100%);
    
    .section-title {
      text-align: center;
      margin-bottom: $spacing-sm;
    }
    
    .section-subtitle {
      text-align: center;
      color: rgba(245, 230, 211, 0.8);
      margin-bottom: $spacing-xxl;
      font-style: italic;
    }
    
    .taproom-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: $spacing-xxl;
    }
    
    .taproom-description {
      h3 {
        color: $amber-gold;
        margin-bottom: $spacing-md;
      }
      
      p {
        margin-bottom: $spacing-lg;
        line-height: 1.6;
        color: rgba(245, 230, 211, 0.9);
      }
    }
    
    .taproom-features {
      display: grid;
      gap: $spacing-md;
      
      .feature {
        background: rgba(245, 230, 211, 0.05);
        padding: $spacing-md;
        border-radius: $border-radius-md;
        border: 1px solid rgba(245, 230, 211, 0.1);
        
        h4 {
          color: $amber-gold;
          margin-bottom: $spacing-xs;
          font-size: 1rem;
        }
        
        p {
          color: rgba(245, 230, 211, 0.8);
          font-size: 0.9rem;
          margin: 0;
        }
      }
    }
    
    .events-calendar {
      h3 {
        color: $amber-gold;
        margin-bottom: $spacing-lg;
      }
      
      .events-list {
        display: grid;
        gap: $spacing-md;
      }
      
      .event-item {
        background: rgba(245, 230, 211, 0.05);
        padding: $spacing-md;
        border-radius: $border-radius-md;
        border: 1px solid rgba(245, 230, 211, 0.1);
        display: flex;
        gap: $spacing-md;
        
        .event-date {
          background: $amber-gold;
          color: $roasted-malt;
          padding: $spacing-xs $spacing-sm;
          border-radius: $border-radius-sm;
          font-weight: 600;
          font-size: 0.9rem;
          white-space: nowrap;
          display: flex;
          align-items: center;
        }
        
        .event-details {
          flex: 1;
          
          h4 {
            color: $foam-cream;
            margin-bottom: $spacing-xs;
          }
          
          p {
            color: rgba(245, 230, 211, 0.8);
            font-size: 0.9rem;
            margin: 0;
          }
        }
      }
    }
  }

  .contact-section {
    background: $dark-forest;
    
    .section-title {
      text-align: center;
      margin-bottom: $spacing-xxl;
    }
    
    .contact-content {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: $spacing-xxl;
    }
    
    .contact-info {
      display: grid;
      gap: $spacing-lg;
      
      .contact-item {
        background: rgba(245, 230, 211, 0.05);
        padding: $spacing-lg;
        border-radius: $border-radius-md;
        border: 1px solid rgba(245, 230, 211, 0.1);
        
        h3 {
          color: $amber-gold;
          margin-bottom: $spacing-sm;
          font-size: 1.2rem;
        }
        
        p {
          color: rgba(245, 230, 211, 0.9);
          line-height: 1.6;
          margin: 0;
        }
      }
    }
    
    .map-placeholder {
      background: rgba(245, 230, 211, 0.05);
      border-radius: $border-radius-lg;
      border: 1px solid rgba(245, 230, 211, 0.1);
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 300px;
      
      .map-content {
        text-align: center;
        
        span {
          font-size: 3rem;
          display: block;
          margin-bottom: $spacing-md;
        }
        
        p {
          color: rgba(245, 230, 211, 0.8);
          margin-bottom: $spacing-xs;
          
          &:first-of-type {
            color: $amber-gold;
            font-weight: 600;
          }
        }
      }
    }
  }

  @media (max-width: $breakpoint-lg) {
    .hero .hero-content {
      grid-template-columns: 1fr;
      text-align: center;
      gap: $spacing-xl;
    }
    
    .story-content {
      grid-template-columns: 1fr !important;
      gap: $spacing-xl;
    }
    
    .taproom-content {
      grid-template-columns: 1fr !important;
      gap: $spacing-xl;
    }
    
    .contact-content {
      grid-template-columns: 1fr !important;
      gap: $spacing-xl;
    }
  }

  @media (max-width: $breakpoint-md) {
    .beers-grid {
      grid-template-columns: 1fr !important;
    }
    
    .hero-buttons {
      justify-content: center;
    }
  }
</style>